{
  "endOfLine": "lf",
  "multilineArraysWrapThreshold": 1,
  "semi": false,
  "overrides": [
    {
      "files": [
        "*.cjs",
        "*.d.ts",
        "*.js",
        "*.mjs",
        "*.ts"
      ],
      "options": {
        "printWidth": 256,
        "singleQuote": true,
        "semi": true,
        "useTabs": true,
        "tabWidth": 4,
        "trailingComma": "none"
      }
    },
    {
      "files": [
        "*.json",
        "*.jsonc"
      ],
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    }
  ],
  "plugins": [
    "./node_modules/prettier-plugin-multiline-arrays"
  ]
}
