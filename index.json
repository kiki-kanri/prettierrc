{
  "endOfLine": "lf",
  "semi": false,
  "overrides": [
    {
      "files": [
        "*.cjs",
        "*.d.ts",
        "*.js",
        "*.mjs",
        "*.ts"
      ],
      "options": {
        "printWidth": 256,
        "singleQuote": true,
        "semi": true,
        "useTabs": true,
        "tabWidth": 4,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.json", "*.jsonc"],
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    }
  ]
}
